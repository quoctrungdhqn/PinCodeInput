<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <EditText
            android:id="@+id/hidden_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:cursorVisible="false"
            android:imeOptions="actionDone"
            android:inputType="text|textNoSuggestions|textFilter"
            android:maxLength="4"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/layout_pincode_1"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/layout_pincode_2"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/pincode_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_edit_text_verify"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text|textNoSuggestions"
                android:maxLength="1"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_pincode_2"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/layout_pincode_1"
            app:layout_constraintLeft_toRightOf="@+id/layout_pincode_1"
            app:layout_constraintRight_toLeftOf="@+id/layout_pincode_3"
            app:layout_constraintTop_toTopOf="@+id/layout_pincode_1">

            <EditText
                android:id="@+id/pincode_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_edit_text_verify"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text|textNoSuggestions"
                android:maxLength="1"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_pincode_3"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"

            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/layout_pincode_2"
            app:layout_constraintLeft_toRightOf="@+id/layout_pincode_2"
            app:layout_constraintRight_toLeftOf="@+id/layout_pincode_4"
            app:layout_constraintTop_toTopOf="@+id/layout_pincode_2">

            <EditText
                android:id="@+id/pincode_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_edit_text_verify"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text|textNoSuggestions"
                android:maxLength="1"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_pincode_4"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/layout_pincode_3"
            app:layout_constraintLeft_toRightOf="@+id/layout_pincode_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_pincode_3">

            <EditText
                android:id="@+id/pincode_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_edit_text_verify"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text|textNoSuggestions"
                android:maxLength="1"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>